from todo_utils import *
import sys


def main():
    argList = sys.argv
    input_file = "todo.txt"
    if len(argList) == 1:
        todo_utils().welcome()
    elif argList[-1] == '-l':
        todo_utils().listToDos(input_file)
    elif len(argList) == 3:
        if argList[1] =='-a':
            t.appendTask(input_file, (argList[2]+"\n"))
        elif argList[1] =='-r':
            t.removeNthAndExceptions(input_file, argList)
    elif argList[-1] == '-a':
        t.unableToAdd()
    elif argList[-1] =='-r':
        t.unableToRemove()
    else:
        t.unsupportedArg()
            
main()