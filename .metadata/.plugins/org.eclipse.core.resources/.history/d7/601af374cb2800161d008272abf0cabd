import todo_utils
import sys
t = todo_utils()

def main():
    argList = sys.argv
    input_file = "todo.txt"
    if len(argList) == 1:
        t.welcome()
    elif argList[-1] == '-l':
        listToDos(input_file)
    elif len(argList) == 3:
        if argList[1] =='-a':
            t.appendTask(input_file, (argList[2]+"\n"))
        elif argList[1] =='-r':
            removeNthAndExceptions().rNAE(input_file, argList)
    elif argList[-1] == '-a':
        unableToAdd().uTA()
    elif argList[-1] =='-r':
        unableToRemove().uTR()
    else:
        unsupportedArg().uA()
            
main()