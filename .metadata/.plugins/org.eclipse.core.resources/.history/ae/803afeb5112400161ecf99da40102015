
from tkinter import *
import math
import random

root = Tk()

w = 1100 
canvas = Canvas(root, width = w, height = w)
canvas.pack()
 
def draw_heart(x, y, a):
    canvas.create_arc(x, y, x+a, y, fill="white", outline="black")

