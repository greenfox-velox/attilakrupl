def spin_words(sentence):
	new = sentence.split()
	print(new)
	rev = ""
	for n in range(len(new)):
		if len(new[n]) > 5:
			for i in new[n]:
				rev += i
				rev += " "
		elif len(new[n]) <= 5 and n < len(new)-1:
			rev += new[n]
			rev += " "
		else:
			rev += new[n]
	return rev
    
    
print (spin_words("Malakala ha valakala"))