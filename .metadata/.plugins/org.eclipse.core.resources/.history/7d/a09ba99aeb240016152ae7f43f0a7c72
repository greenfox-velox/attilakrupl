
from tkinter import *
import math
import random


root = Tk()

w = 1000 
canvas = Canvas(root, width = 1.5*w, height = w, bg="black")
canvas.pack()
 
def draw_branch(x, y, x2, y2, a):
    canvas.create_line(x, y, x2, y2, a, fill="gold")
    
def draw_fractal(x, y, x2, y2, size):
    draw_branch(x, y, x2, y2, size)
    small = 0.98*size
    newx = x2
    newy = y2
    angle = 30
    alfa = angle/2
    beta = 90- alfa
    gamma = 90
    
    x_diff = math.sin(math.radians(alfa))/math.sin(math.radians(gamma))*small
    y_diff = math.sin(math.radians(beta))/math.sin(math.radians(gamma))*small
        
    if small >= 3:
        
        draw_fractal(x, y, small)
        
    else:
        pass
    
         
        
draw_fractal(750, 900, 50)

root.mainloop()